@page "/"

<MudContainer Class="ma-0 pa-0 d-flex flex-column" Style="max-width: none; height: 100%; width: 100%; max-height: 100vh;">
    <MudContainer Class="ma-0 pa-2 d-flex flex-row justify-content-between" Style="max-width: none; height: fit-content; width: 100%;">
        <MudText Typo="Typo.h4">Homepage</MudText>
        <!--<MudContainer Class="ma-0 pa-0 d-flex flex-row" Style="max-width: none; width: fit-content"></MudContainer>-->
    </MudContainer>
    <MudContainer Class="ma-0 px-4 pb-4 pt-2 gap-2 flex-grow-1 d-flex flex-row justify-content-center" 
                  Style="overflow: hidden; max-width: none; height: 100%;">
        <MudGrid Class="ma-0 pa-0" Justify="Justify.FlexStart" Style="height: fit-content;">
            @if (_stories.Count != 0)
            {
                foreach (var story in _stories)
                {
                    <MudItem xs="2" Class="ma-0 pa-1 d-flex justify-content-center align-items-center" Style="height: fit-content;">
                        <MudButton Variant="Variant.Filled" Color="Color.Default" Style="width: 100%;">
                            <MudContainer 
                                Class="ma-0 pa-0 d-flex flex-column align-items-center"
                                Style="height: fit-content; width: fit-content">
                                <MudIcon Icon="@Icons.Material.Filled.Article" Color="Color.Primary" Style="font-size: 6rem;"/>
                                <MudText Typo="Typo.body1">@story</MudText>
                            </MudContainer>
                        </MudButton>
                    </MudItem>
                }
            }
        </MudGrid>
    </MudContainer>
</MudContainer>

@code {
    private readonly List<string> _stories = [];

    protected override void OnInitialized()
    {
        base.OnInitialized();
    }

}